{
    "alma-9": {
        "image_url": "https://repo.almalinux.org/almalinux/9/cloud/x86_64/images/AlmaLinux-9-GenericCloud-latest.x86_64.qcow2",
        "install_packages": [
            "qemu-guest-agent",
            "curl",
            "git"
        ],
        "update_packages": true,
        "run_commands": [
            "sudo sed -i 's/SELINUX=enforcing/SELINUX=disabled/g' /etc/selinux/config",
            "(crontab -l ; echo '*/1 * * * * pgrep -f qemu-ga > /dev/null || systemctl start qemu-guest-agent') | crontab -",
            "sudo sed -i 's/\\(FILTER_RPC_ARGS=\"--allow-rpcs=.*\\)\"/\\1,guest-exec,guest-exec-status\"/' /etc/sysconfig/qemu-ga"
        ],
        "ssh_password_auth": false,
        "ssh_root_login": false
    },
    "alma-10": {
        "image_url": "https://raw.repo.almalinux.org/almalinux/10/cloud/x86_64/images/AlmaLinux-10-GenericCloud-latest.x86_64.qcow2",
        "install_packages": [
            "qemu-guest-agent",
            "curl",
            "git"
        ],
        "update_packages": true,
        "run_commands": [
            "command -v crb >/dev/null 2>&1 && sudo crb enable || (sudo dnf -y install dnf-plugins-core && sudo dnf config-manager --set-enabled crb)",
            "sudo dnf install -y epel-release || sudo dnf install -y https://dl.fedoraproject.org/pub/epel/epel-release-latest-10.noarch.rpm",
            "sudo dnf -y makecache",
            "sudo sed -i 's/SELINUX=enforcing/SELINUX=disabled/g' /etc/selinux/config",
            "sudo systemctl enable qemu-guest-agent || sudo ln -sf /usr/lib/systemd/system/qemu-guest-agent.service /etc/systemd/system/multi-user.target.wants/qemu-guest-agent.service",
            "sudo rm -f /etc/ssh/ssh_host_*",
            "sudo systemctl enable sshd-keygen.target",
            "sudo systemctl enable sshd",
            "(crontab -l 2>/dev/null; echo '*/1 * * * * pgrep -f qemu-ga >/dev/null || systemctl start qemu-guest-agent') | crontab -",
            "sudo sed -i 's/\\(FILTER_RPC_ARGS=\"--allow-rpcs=.*\\)\"/\\1,guest-exec,guest-exec-status\"/' /etc/sysconfig/qemu-ga"
        ],
        "ssh_password_auth": false,
        "ssh_root_login": false
    },
    "debian-12": {
        "image_url": "https://cloud.debian.org/images/cloud/bookworm/latest/debian-12-genericcloud-amd64.qcow2",
        "install_packages": [
            "qemu-guest-agent",
            "curl",
            "git",
            "cron"
        ],
        "update_packages": true,
        "run_commands": [
            "(crontab -l ; echo \"*/1 * * * * pgrep -f qemu-ga > /dev/null || systemctl start qemu-guest-agent\") | crontab -",
            "sed -i 's/^# *\\(en_US\\.UTF-8 UTF-8\\)/\\1/' /etc/locale.gen",
            "locale-gen",
            "update-locale LANG=en_US.UTF-8 LC_ALL=en_US.UTF-8"
        ],
        "ssh_password_auth": false,
        "ssh_root_login": false
    },
